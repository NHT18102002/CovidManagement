<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="24.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="covidmanagement.controller.xetnghiemcontroller.ThemController">
   <children>
      <HBox alignment="CENTER" prefHeight="30.0">
         <children>
            <Label alignment="CENTER_RIGHT" contentDisplay="BOTTOM" prefHeight="30.0" prefWidth="142.0" text="Mã nhân khẩu">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="idNKField" maxWidth="1.7976931348623157E308" prefHeight="30.0" prefWidth="320.0" promptText="VD: 12 (chỉ chứa chữ số)">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="30.0">
         <children>
            <Label alignment="CENTER_RIGHT" contentDisplay="BOTTOM" prefHeight="30.0" prefWidth="142.0" text="Họ tên">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="nameField" maxWidth="1.7976931348623157E308" prefHeight="30.0" prefWidth="320.0" promptText="VD: Nguyễn Văn A">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="30.0">
         <children>
            <Label alignment="CENTER_RIGHT" contentDisplay="BOTTOM" prefHeight="30.0" prefWidth="142.0" text="Thời gian xét nghiệm">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <DatePicker fx:id="dateField" prefHeight="30.0" prefWidth="320.0" promptText="DD/MM/YYYY">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </DatePicker>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="30.0">
         <children>
            <Label alignment="CENTER_RIGHT" contentDisplay="BOTTOM" prefHeight="30.0" prefWidth="142.0" text="Địa điểm xét nghiệm">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="placeField" maxWidth="1.7976931348623157E308" prefHeight="30.0" prefWidth="320.0">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="30.0">
         <children>
            <Label alignment="CENTER_RIGHT" contentDisplay="BOTTOM" prefHeight="30.0" prefWidth="142.0" text="Kết quả xét nghiệm">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ChoiceBox fx:id="resultField" prefHeight="30.0" prefWidth="320.0">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </ChoiceBox>
         </children>
      </HBox>
      <BorderPane>
         <center>
            <Button fx:id="addButton" alignment="CENTER" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#onAdd" prefHeight="26.0" prefWidth="74.0" text="Thêm">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </center>
      </BorderPane>
   </children>
</VBox>
